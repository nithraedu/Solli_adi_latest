<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
android:layout_marginTop="@dimen/lrtbp_5"
    android:id="@+id/action_back"
    android:background="@drawable/action_back"
    android:textSize="@dimen/txt_25"
    android:layout_width="@dimen/txt_25"
    android:layout_height="@dimen/txt_25" />
    <TextView
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingTop="@dimen/wh_2"
        android:paddingBottom="@dimen/wh_2"
        android:id="@+id/actionword8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="சொல் விளையாட்டு"
        android:textColor="@color/dark_green"
        android:textSize="@dimen/txt_18"
        />
    <RelativeLayout
        android:id="@+id/tit_txt1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_22"
            android:layout_centerInParent="true"
            android:padding="@dimen/lrtbp_5"
            android:gravity="center"
            android:layout_marginTop="@dimen/lrtbp_5"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <Button
            android:id="@+id/noti_delete"
            android:layout_width="@dimen/wh_35"
            android:layout_height="@dimen/wh_35"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/lrtbp_5"
            android:background="@drawable/delete_notification"/>
    </RelativeLayout>
</RelativeLayout>