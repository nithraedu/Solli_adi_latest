<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Price_solli_adi.Game_Status">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ads_lay">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:elevation="@dimen/lrtbp_15">

            <TextView
                android:layout_width="@dimen/wh_35"
                android:layout_height="@dimen/wh_35"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/wh_2"
                android:layout_toLeftOf="@+id/refresh"
                android:background="@drawable/qtn"
                android:visibility="gone" />

            <TextView
                android:id="@+id/back"
                android:layout_width="@dimen/wh_40"
                android:layout_height="@dimen/wh_40"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/lrtbp_5"
                android:background="@drawable/back_arrow_green"
                android:textSize="@dimen/txt_20" />

            <TextView
                android:id="@+id/intros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:layout_marginBottom="@dimen/lrtbp_10"
                android:background="@drawable/back_dialog"
                android:padding="@dimen/lrtbp_5"
                android:text="விதிமுறைகள்"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_12" />

            <LinearLayout
                android:id="@+id/sco_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="@dimen/wh_70"
                        android:layout_height="@dimen/wh_70"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:layout_toLeftOf="@+id/intros"
                        android:src="@drawable/price_pf"
                        android:textSize="@dimen/txt_16" />
                    <LinearLayout
                        android:id="@+id/pf_edit"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/name_txt"
                            android:padding="@dimen/lrtbp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/lrtbp_5"
                            android:text=""
                            android:textColor="#094e03"
                            android:textSize="@dimen/txt_18" />
                        <TextView
                            android:layout_marginLeft="@dimen/lrtbp_5"
                            android:layout_gravity="center"
                            android:id="@+id/nm_ed_ic"
                            android:layout_width="@dimen/lrtbp_15"
                            android:layout_height="@dimen/lrtbp_15"
                            android:layout_marginTop="@dimen/lrtbp_5"
                            android:text=""
                            android:background="@drawable/edits"
                            android:textColor="#094e03"
                            android:textSize="@dimen/txt_18" />
                    </LinearLayout>

                    <TextView
                        android:background="@drawable/back_dialog"
                        android:layout_gravity="center"
                        android:id="@+id/date_show"
                        android:padding="@dimen/lrtbp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/lrtbp_5"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txt_16"
                        />
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10">

                        <TextView
                            android:id="@+id/u_nilai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#013909"
                            android:textSize="@dimen/txt_16" />

                        <TextView
                            android:id="@+id/your_pos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/lrtbp_5"
                            android:text=""
                            android:textColor="#013909"
                            android:textSize="@dimen/txt_18"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:layout_marginBottom="@dimen/lrtbp_10">

                        <TextView
                            android:id="@+id/u_pulli"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#013909"
                            android:textSize="@dimen/txt_16" />

                        <TextView
                            android:id="@+id/your_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/lrtbp_5"
                            android:text=""
                            android:textColor="#013909"
                            android:textSize="@dimen/txt_16"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_below="@+id/top"
            android:background="#1f7c4a">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <WebView
                    android:id="@+id/loading_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"></WebView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/lrtbp_15"
                    android:layout_marginRight="@dimen/lrtbp_15"
                    android:layout_marginTop="@dimen/lrtbp_10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_month_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bt1_background_border"
                        android:elevation="@dimen/lrtbp_10"
                        android:gravity="center"
                        android:padding="@dimen/lrtbp_20"
                        android:text="     நடப்பு மாத நிலை மற்றும் புள்ளிப் பட்டியல்"
                        android:textColor="#ffff"
                        android:textSize="@dimen/txt_16" />

                    <TextView
                        android:id="@+id/previus_month_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/lrtbp_5"
                        android:background="@drawable/bt1_background_border"
                        android:elevation="@dimen/lrtbp_10"
                        android:gravity="center"
                        android:padding="@dimen/lrtbp_20"
                        android:text="     கடந்த மாத நிலை மற்றும் புள்ளிப் பட்டியல்"
                        android:textColor="#ffff"
                        android:textSize="@dimen/txt_16" />

                    <TextView
                        android:id="@+id/previus_month_my_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/lrtbp_5"
                        android:background="@drawable/bt1_background_border"
                        android:elevation="@dimen/lrtbp_10"
                        android:gravity="center"
                        android:padding="@dimen/lrtbp_20"
                        android:text="     கடந்த மாத உங்கள் நிலை மற்றும் புள்ளிகள்"
                        android:textColor="#ffff"
                        android:textSize="@dimen/txt_16" />
                    <TextView
                        android:id="@+id/winner_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/lrtbp_5"
                        android:background="@drawable/bt1_background_border"
                        android:elevation="@dimen/lrtbp_10"
                        android:gravity="center"
                        android:padding="@dimen/lrtbp_20"
                        android:text="வெற்றியாளர்கள்"
                        android:textColor="#ffff"
                        android:textSize="@dimen/txt_16" />

                </LinearLayout>

                <TextView
                    android:id="@+id/retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="@dimen/lrtbp_10"
                    android:padding="@dimen/lrtbp_10"
                    android:text="Retry"
                    android:textColor="#0e3301"
                    android:textSize="@dimen/txt_16"
                    android:visibility="gone" />
            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
    <com.facebook.ads.NativeAdLayout
        android:visibility="gone"
        android:id="@+id/native_banner_ad_container"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <LinearLayout

        android:id="@+id/ads_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

    </LinearLayout>

</RelativeLayout>