<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_background"
    tools:context="nithra.tamil.letter.crossword.search.game_level_page">


    <RelativeLayout
        android:id="@+id/level_main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/level_tool__lay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/go_back_lecvel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="@drawable/back_arrow_green" />

            <LinearLayout
                android:id="@+id/coin_lay"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@drawable/button1"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/coin_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/coins"
                    android:paddingLeft="@dimen/lrtbp_5" />

                <TextView
                    android:id="@+id/coin_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/lrtbp_10"
                    android:text="500"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/n_icon_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Ad"
                    android:textColor="#fff" />

                <ImageView
                    android:id="@+id/icon_ad_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/shareq"
                    android:visibility="visible" />
            </LinearLayout>


        </RelativeLayout>

        <nithra.tamil.word.game.solliadi.word_search_game.Models.extra.MyTextView
            android:id="@+id/level_title"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/button2"
            android:elevation="@dimen/lrtbp_5"
            android:gravity="center"
            android:text="sample"
            android:textColor="#163e03"
            android:textSize="18dp" />


        <RelativeLayout
            android:id="@+id/list_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/level_title">

            <ListView
                android:id="@+id/level_list_view"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/native_banner_ad_container"
                android:layout_marginBottom="@dimen/lrtbp_5">

            </ListView>

            <LinearLayout
                android:id="@+id/Baner_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="gone" />

            <com.facebook.ads.NativeAdLayout
                android:id="@+id/native_banner_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:minHeight="50dp" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
