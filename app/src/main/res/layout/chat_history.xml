<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99b7b575"
   >
    <RelativeLayout
        android:layout_margin="@dimen/lrtbp_10"
        android:layout_width="match_parent"
        android:background="#7b7a58"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/kk"
            android:background="@color/dark_yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/lrtbp_10"
                android:id="@+id/ssss"
                android:layout_width="@dimen/wh_35"
  android:layout_alignParentRight="true"
                android:layout_height="@dimen/wh_35"
                android:background="@drawable/kid_dia_cancel"
                />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/lrtbp_10"
            android:layout_below="@+id/kk"
            android:text="நீங்கள்"
            android:background="#860f0f"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="@dimen/lrtbp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/kk"
            android:layout_marginTop="@dimen/lrtbp_10"
            android:layout_alignParentRight="true"
            android:id="@+id/names"
            android:text="எதிராளி"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="#860f0f"
            android:textColor="#ffffff"
            android:padding="@dimen/lrtbp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/list_l"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/names" />
    </RelativeLayout>

</RelativeLayout>