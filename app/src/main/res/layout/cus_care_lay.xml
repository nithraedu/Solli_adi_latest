<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lrtbp_10"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/lrtbp_10"
        app:cardBackgroundColor="@color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/text_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_5"
                    android:layout_marginRight="@dimen/lrtbp_5"
                    android:gravity="center|left"
                    android:lineSpacingMultiplier="1.5"
                    android:padding="@dimen/lrtbp_10"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_12"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/ans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lrtbp_5"
                android:layout_marginRight="@dimen/lrtbp_5"
                android:gravity="center|left"
                android:lineSpacingMultiplier="1.5"
                android:padding="@dimen/lrtbp_10"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/txt_12"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginBottom="@dimen/lrtbp_10"
                android:background="@color/colorPrimary"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>