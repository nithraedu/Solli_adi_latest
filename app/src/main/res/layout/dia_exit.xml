<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

  <!--  android:shadowColor="#ae0606"
    android:shadowDx="1"
    android:shadowDy="1"
    android:shadowRadius="2"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_dialog"
            android:gravity="center"
            android:text="வெளியேற வேண்டுமா"
            android:textColor="#a40707"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/back_dialog"
            android:orientation="vertical">


            <TextView
                android:id="@+id/content_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="நீங்கள் விளையாட்டில் இருந்து வெளியேற விரும்புகிறீர்களா ?"
                android:gravity="center"
                android:layout_margin="25dp"
                android:textColor="#a40707"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/cancel_exit"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bt2"
                    android:layout_margin="10dp"
                    android:text="இல்லை"
                    android:paddingLeft="20dp"
                    android:textSize="16dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/done_exit"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bt3"
                    android:layout_margin="10dp"
                    android:text=" ஆம்"
                    android:paddingRight="25dp"
                    android:textSize="15dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"/>


            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_dialog" />

    </LinearLayout>


</RelativeLayout>