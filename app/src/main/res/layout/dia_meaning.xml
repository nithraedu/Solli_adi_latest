<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Baner_frame_mean">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_50"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="சொல்லுக்கான விளக்கம்"
                android:textColor="#195905"
                android:scrollbars="vertical"
                android:textSize="@dimen/txt_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meaning_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="dgdjkdjkdjkd"
                android:textSize="@dimen/txt_12"
                android:textStyle="bold"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/wh_40"
                android:paddingBottom="@dimen/wh_40"
                android:paddingRight="@dimen/txt_16"
                android:paddingLeft="@dimen/txt_16"
                android:background="#308602" />

        </LinearLayout>
        <TextView
            android:id="@+id/meaning_cancel_txt"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/bt3"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="சரி"
            android:textColor="#195905"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>




    <FrameLayout
        android:id="@+id/Baner_frame_mean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:visibility="gone" />


</RelativeLayout>