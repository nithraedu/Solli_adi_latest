<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_icon"
        android:layout_marginLeft="@dimen/lrtbp_5"
        android:layout_marginTop="@dimen/lrtbp_20"
        android:layout_marginRight="@dimen/lrtbp_5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="எங்களது செயலியை பயன்படுத்தியதற்கு நன்றி "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/app_icon"
        android:gravity="center"
        android:text="சொல்லிஅடி"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/wh_180"
        android:layout_height="@dimen/wh_180"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/lrtbp_20"
        android:src="@drawable/logo2"
        android:visibility="gone" />

</RelativeLayout>
