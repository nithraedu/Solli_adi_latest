<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/info_margin_left"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/home_screen_icon_width"
        android:layout_height="@dimen/home_screen_icon_width" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/info_margin_left"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_app_package_name"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>