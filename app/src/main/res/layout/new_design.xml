<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/back_next2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:background="@drawable/back_button1"
                android:layout_margin="@dimen/lrtbp_10"
                android:elevation="@dimen/lrtbp_10"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <nithra.tamil.word.game.solliadi.RippleView
                    android:id="@+id/pic_game"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="@dimen/lrtbp_5"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/p_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:gravity="center"
                            android:padding="@dimen/lrtbp_5"
                            android:text="(0)"
                            android:textColor="#faf200"
                            android:textSize="@dimen/txt_10" />

                            <TextView
                                android:id="@+id/picgame"
                                android:layout_width="@dimen/wh_60"
                                android:layout_height="@dimen/wh_60"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="@dimen/lrtbp_5"
                                android:layout_marginTop="@dimen/lrtbp_5"
                                android:layout_weight="1"
                                android:background="@drawable/but1_ic"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_10"
                                android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/picgame"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:padding="@dimen/wh_2"
                            android:text="படம் பார்த்து கண்டுபிடி"
                            android:textColor="#ffff"
                            android:textSize="@dimen/txt_10" />


                    </RelativeLayout>

                </nithra.tamil.word.game.solliadi.RippleView>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/lrtbp_10"
                android:background="@drawable/back_button2"
                android:elevation="@dimen/lrtbp_10"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <nithra.tamil.word.game.solliadi.RippleView
                    android:id="@+id/hint_game"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/lrtbp_5"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/c_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/lrtbp_5"
                            android:gravity="center"
                            android:text="(0)"
                            android:textColor="#faf200"
                            android:textSize="@dimen/txt_10" />

                                               <TextView
                                android:id="@+id/hintgame"
                                android:layout_width="@dimen/wh_60"
                                android:layout_height="@dimen/wh_60"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/lrtbp_5"
                                android:background="@drawable/but6_ic"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_10"
                                android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hintgame"
                            android:gravity="center"

                            android:padding="@dimen/wh_2"
                            android:text="குறிப்புகள் மூலம் கண்டுபிடி"
                            android:textColor="#ffff"
                            android:textSize="@dimen/txt_10" />
                    </RelativeLayout>


                </nithra.tamil.word.game.solliadi.RippleView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:background="@drawable/back_button2"
                android:layout_margin="@dimen/lrtbp_10"
                android:elevation="@dimen/lrtbp_10"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/lrtbp_10"
                android:background="@drawable/back_button1"
                android:elevation="@dimen/lrtbp_10"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
</RelativeLayout>