<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/lrtbp_5"
    android:background="@drawable/nit_new_back"
    android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/header">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="2dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/img_logo"
                android:text="Aptitude Test and Preparation"
                android:layout_marginLeft="5dp"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMediumInverse" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:background="#fff"
            android:id="@+id/middle">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/croll_app_height"
                android:background="#BDBDBD"/>

            <TextView
                android:id="@+id/app_dec"
                android:layout_width="match_parent"
                android:layout_below="@+id/back_img"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:text="Aptitude Test and Preparation app is a collection of quantitative "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/footer"
            android:layout_below="@+id/middle">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/textView2"
                    android:progressBackgroundTint="#B2DFDB"
                    android:progressTint="#ffff8800"
                    android:secondaryProgressTint="#ffff8800" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="Review"
                    android:textColor="#000"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_open"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:text="OPEN"
                android:textColor="#fff"
                android:background="#06425C"
                android:layout_toRightOf="@+id/relativeLayout1"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btn_shr"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="SHARE"
                android:layout_toRightOf="@+id/btn_open"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:background="#814374"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/btn_ins"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="INSTALL"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/btn_shr"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:background="#358B2C" />



    </RelativeLayout>

</RelativeLayout>
