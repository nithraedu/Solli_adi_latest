<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#c1898383"
    android:orientation="vertical" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lrtbp_5"
        android:padding="@dimen/lrtbp_10"
      >
    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <LinearLayout
            android:background="@drawable/back_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="vertical" >
 <TextView
     android:id="@+id/head_txt"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:textColor="@color/white"
     android:layout_marginTop="@dimen/lrtbp_25"
     android:layout_marginLeft="@dimen/lrtbp_5"
     android:layout_marginRight="@dimen/lrtbp_5"
     android:layout_marginBottom="@dimen/lrtbp_5"
     android:padding="@dimen/lrtbp_10"
     android:gravity="center|left"
     android:textStyle="bold"
     android:text="asfsdfgdsfg"
     android:drawableLeft="@android:drawable/ic_dialog_alert"
     android:textAppearance="?android:attr/textAppearanceLarge"

     />

            <TextView
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lrtbp_10"
                android:textColor="@color/white"
                android:text="fsdfgsdg"
                android:textSize="@dimen/txt_18" >
            </TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <Button
        android:id="@+id/btnSet"
        android:layout_width="@dimen/croll_app_height"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lrtbp_10"
        android:paddingBottom="@dimen/lrtbp_10"
        android:paddingTop="@dimen/lrtbp_10"
        android:layout_weight="0.33"
android:background="@drawable/b_go"
        android:clickable="true"
        android:text="  yes  "
        android:textColor="#fff"
        android:textSize="@dimen/txt_16" />
            <Button
                android:id="@+id/btnok"
                android:layout_width="@dimen/croll_app_height"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lrtbp_10"
                android:paddingBottom="@dimen/lrtbp_10"
                android:paddingTop="@dimen/lrtbp_10"
                android:background="@drawable/b_no"
                android:clickable="true"
                android:layout_weight="0.33"
                android:text="  No  "
                android:textColor="#fff"
                android:textSize="@dimen/txt_16" />
</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>