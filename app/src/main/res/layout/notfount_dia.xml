<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_next2"
    android:gravity="center"
    android:orientation="vertical" >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lrtbp_5"
        android:padding="@dimen/lrtbp_10"
      >
    <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <LinearLayout
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >
<!--<ImageView
    android:layout_width="@dimen/wh_60"
    android:layout_height="@dimen/wh_60"
    android:src="@drawable/icon_error"/>-->

            <TextView
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lrtbp_10"
                android:textColor="#000"
android:gravity="center"
                android:text="Article Not found"
                android:textSize="@dimen/txt_18" >
            </TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

            <Button
                android:id="@+id/btnok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lrtbp_10"
                android:paddingBottom="@dimen/lrtbp_10"
                android:paddingTop="@dimen/lrtbp_10"
                android:background="@drawable/back_next2"
                android:layout_weight="0.33"
                android:text="  Ok  "
                android:textColor="#fff"
                android:textSize="@dimen/txt_16" />
</LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>