<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="85dp">

        <ImageView
            android:id="@+id/noti_img"
            android:layout_width="@dimen/croll_insbut_height"
            android:layout_height="@dimen/croll_insbut_height"
            android:padding="@dimen/lrtbp_5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/noti_id"
            android:layout_width="@dimen/lrtbp_30"
            android:layout_height="@dimen/lrtbp_30"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="#e79108"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_16"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/item_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/dfdf"
            android:layout_toRightOf="@id/noti_id"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/lrtbp_5"
                android:layout_toRightOf="@+id/noti_id"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=""
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dfdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/noti_id"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="15/05/2018"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ba6317"
                app:drawableLeftCompat="@drawable/ic_date_range_black_24dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="15/05/2018"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ba6317"
                app:drawableLeftCompat="@drawable/ic_access_time_black_24dp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


