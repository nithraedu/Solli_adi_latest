<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/lrtbp_5"
        android:layout_marginRight="@dimen/lrtbp_5"
        android:lineSpacingExtra="5dp">

    <TextView
        android:id="@+id/txtfd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="@dimen/lrtbp_10"
        android:background="@drawable/dialog_border"
        android:text="GK QUIZ"
        android:gravity="center"
        android:textSize="@dimen/txt_18"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/lrtbp_10"
        android:lineSpacingExtra="5dp"/>


    <TextView
        android:id="@+id/txt"
        android:layout_below="@id/txtfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="@dimen/lrtbp_10"
        android:gravity="center"
        android:textSize="@dimen/txt_12"
        android:textColor="#000"
        android:textStyle="italic|bold"
        android:lineSpacingExtra="5dp"/>


    <TextView
        android:id="@+id/permission_ok"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:text="OK"
        android:layout_centerInParent="true"
        android:textColor="#000"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@id/txt"
        android:background="@drawable/background_border"/>

</RelativeLayout>
</RelativeLayout>