<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#feffffff">
<LinearLayout
    android:layout_above="@+id/ads_lay"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:elevation="@dimen/lrtbp_20"
            android:background="@color/colorPrimary"

            android:layout_width="match_parent"
            android:layout_height="@dimen/wh_50">
                <TextView
                    android:id="@+id/heading_txt"
                    android:gravity="center"
                    android:textSize="@dimen/txt_16"
                    android:layout_toLeftOf="@+id/close"
                    android:textColor="@color/dark_green"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/close"
                    android:background="@drawable/kid_dia_cancel"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/wh_35"
                    android:layout_height="@dimen/wh_35" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <WebView
                    android:id="@+id/web_introscreen"
                    android:layout_above="@+id/done_exit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/lrtbp_10">
                </WebView>

                <TextView
                    android:id="@+id/done_exit"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bt3"
                    android:gravity="center"
                    android:text=" சரி"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />
        </RelativeLayout>

</LinearLayout>

        <LinearLayout
            android:id="@+id/ads_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="gone">
        </LinearLayout>


</RelativeLayout>