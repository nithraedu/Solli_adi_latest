<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_black">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/lrtbp_10"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:layout_marginRight="@dimen/lrtbp_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/lrtbp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/lrtbp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/lrtbp_10"
                android:layout_marginLeft="@dimen/lrtbp_30"
                android:layout_marginRight="@dimen/lrtbp_30"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/wh_50"
                    android:layout_height="@dimen/wh_50"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/logo2"
                    />

                <TextView
                    android:layout_width="@dimen/wh_50"
                    android:layout_height="@dimen/wh_50"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/txt_22"
                    android:textColor="#000"
                    android:text="="
                    />

                <ImageView
                    android:layout_width="@dimen/wh_40"
                    android:layout_height="@dimen/wh_40"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/remove_ad_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_15"
                    android:layout_marginRight="@dimen/lrtbp_15"
                    android:gravity="center"
                    android:text="@string/remove_ad"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_1"
                    android:layout_margin="@dimen/lrtbp_10"
                    android:background="@color/shade2" />

                <LinearLayout
                    android:id="@+id/exp_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/learn_cat_image"
                            android:layout_width="@dimen/wh_80"
                            android:layout_height="@dimen/wh_80"
                            android:padding="5dp"
                            android:src="@drawable/ic_currency_inr"
                            app:tint="@color/sandle" />

                        <LinearLayout
                            android:id="@+id/lin2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/lrtbp_5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_marginTop="10dp"
                                android:lineSpacingMultiplier="1.5"
                                android:text="ஒரு முறை மட்டும் Purchase செய்தால் போதும் வாழ்நாள் முழுவதும் விளம்பரங்கள் இல்லாமல் சொல்லிஅடி செயலியை விளையாடி மகிழலாம்."
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_10" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_1"
                        android:layout_margin="@dimen/lrtbp_10"
                        android:background="@color/shade2" />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:id="@+id/number_change"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_40"
                    android:layout_margin="@dimen/lrtbp_5">

                    <Button
                        android:id="@+id/purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg2"
                        android:padding="@dimen/lrtbp_10"
                        android:text="@string/purchase"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/cuscare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/lrtbp_10"
                        android:layout_weight="1"
                        android:background="@drawable/bg2"
                        android:padding="@dimen/lrtbp_10"
                        android:text="@string/customer_care"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>