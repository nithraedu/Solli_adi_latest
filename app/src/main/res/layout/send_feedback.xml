<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc98a42d"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_back">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rep_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/lrtbp_5"

                android:layout_marginTop="@dimen/lrtbp_5"
                android:layout_marginRight="@dimen/lrtbp_5"
                android:gravity="center"
                android:paddingTop="@dimen/lrtbp_5"
                android:text="சொல்லிஅடி செயலியை  மேலும்  மேம்படுத்திக்கொள்ள உங்களது கருத்துக்களை பதிவு செய்யவும் "
                android:textColor="@color/white"
                android:textSize="@dimen/txt_16"
                android:textStyle="bold"
                android:typeface="serif" />

            <EditText
                android:id="@+id/emails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_45"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_marginTop="@dimen/lrtbp_5"
                android:layout_marginRight="@dimen/lrtbp_10"
                android:background="@color/white"
                android:gravity="left|top"
                android:hint="மின்னஞ்சலை பதிவிடவும்"
                android:minLines="6"
                android:textColor="#000"
                android:textSize="@dimen/txt_18"></EditText>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:layout_marginRight="@dimen/lrtbp_10"
                android:background="@color/white">

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:gravity="left|top"
                    android:hint=" கருத்துக்களை பதிவு செய்ய"
                    android:inputType="textMultiLine"
                    android:textColor="#000"
                    android:textColorHint="@color/red"
                    android:textSize="@dimen/txt_18"></EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_marginTop="@dimen/lrtbp_5"
                android:layout_marginRight="@dimen/lrtbp_10"
                android:background="@drawable/ans_background"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/lrtbp_10"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="கட்டாயமற்றது"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_16"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_10"
                    android:layout_marginRight="@dimen/lrtbp_10">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_45"
                        android:background="@color/white"
                        android:gravity="left|top"
                        android:hint="பெயர்"
                        android:minLines="6"
                        android:textColor="#000"
                        android:textColorHint="@color/red"
                        android:textSize="@dimen/txt_18"></EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_10"
                    android:layout_marginRight="@dimen/lrtbp_10">

                    <EditText
                        android:id="@+id/ph_no"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_45"
                        android:background="@color/white"
                        android:gravity="left|top"
                        android:hint=" அழைபேசி எண்"
                        android:inputType="number"
                        android:minLines="6"
                        android:textColor="#000"
                        android:textColorHint="@color/red"
                        android:textSize="@dimen/txt_18"></EditText>
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/privacy_policy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:text="@string/your_string_here"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lrtbp_10"
                android:layout_marginBottom="@dimen/lrtbp_10"
                android:background="@drawable/solukulsol"
                android:clickable="true"
                android:paddingLeft="@dimen/lrtbp_10"
                android:paddingTop="@dimen/lrtbp_10"
                android:paddingRight="@dimen/lrtbp_10"
                android:paddingBottom="@dimen/lrtbp_10"
                android:text=" சமர்ப்பிக்க "
                android:textColor="#fff"
                android:textSize="@dimen/txt_16"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>