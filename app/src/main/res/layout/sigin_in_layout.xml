<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#e2616455"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#fab700"
        android:paddingTop="@dimen/lrtbp_5"
        android:layout_marginRight="@dimen/lrtbp_5"
        android:layout_marginLeft="@dimen/lrtbp_5"
        android:paddingBottom="@dimen/lrtbp_10"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/asd"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="@dimen/lrtbp_20"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:visibility="gone"
                android:layout_width="@dimen/txt_25"
                android:layout_height="@dimen/txt_25" />
            <TextView
                android:id="@+id/txt_ex"
                android:paddingBottom="@dimen/lrtbp_10"
                android:paddingTop="@dimen/lrtbp_10"
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"
                android:textColor="#0043de"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="அதிக கேள்விக்கு பதிலளிப்பவர் வெற்றியாளர்"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <RelativeLayout

            android:layout_marginTop="@dimen/lrtbp_5"
            android:layout_marginBottom="@dimen/lrtbp_10"
            android:layout_below="@+id/asd"
            android:layout_marginLeft="@dimen/lrtbp_10"
            android:layout_marginRight="@dimen/lrtbp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/yes"
                android:text="சரி"
                android:layout_marginLeft="@dimen/lrtbp_20"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_16"
                android:gravity="center"
                android:paddingTop="@dimen/lrtbp_10"
                android:paddingBottom="@dimen/lrtbp_10"
                android:background="@drawable/b_go"
                android:layout_width="@dimen/croll_app_height"
                android:layout_height="wrap_content" />



        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>