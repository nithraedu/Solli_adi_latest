        <TextView
            android:id="@+id/u"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/txt_25"
            android:layout_centerHorizontal="true"

            android:visibility="invisible"

            android:layout_marginLeft="@dimen/lrtbp_30"
            android:background="@drawable/blue_ballun"
            android:text=" உ"
            android:layout_width="@dimen/wh_40"
            android:layout_height="@dimen/wh_40" />
        <TextView
            android:id="@+id/u_para"
            android:textColor="@color/dark_green"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/wh_35"
            android:background="@drawable/u_par"
            android:layout_width="@dimen/wh_70"
            android:layout_height="@dimen/wh_70" />
