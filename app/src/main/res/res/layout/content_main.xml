        <TextView
            android:id="@+id/ee"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/txt_25"
            android:layout_alignParentRight="true"
            android:visibility="invisible"

            android:layout_marginRight="@dimen/lrtbp_30"

            android:background="@drawable/yellow_ballun"
            android:text="  ஈ"
            android:layout_width="@dimen/wh_40"
            android:layout_height="@dimen/wh_40" />
        <TextView
            android:id="@+id/ee_para"
            android:textColor="@color/dark_green"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/lrtbp_30"
            android:background="@drawable/ee_para"
            android:layout_width="@dimen/wh_70"
            android:layout_height="@dimen/wh_70" />
        <TextView
            android:id="@+id/e"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/txt_25"
            android:visibility="invisible"
            android:layout_alignParentRight="true"

            android:layout_marginRight="@dimen/wh_80"

            android:background="@drawable/rose_ballon"
            android:text=" இ"
            android:layout_width="@dimen/wh_40"
            android:layout_height="@dimen/wh_40" />
        <TextView
            android:id="@+id/e_para"
            android:visibility="invisible"
            android:textColor="@color/dark_green"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/wh_80"
            android:background="@drawable/e_para"
            android:layout_width="@dimen/wh_70"
            android:layout_height="@dimen/wh_70" />



        <LinearLayout
           android:layout_centerHorizontal="true"
            android:id="@+id/head"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="@dimen/lrtbp_15"
            >



            <nithra.tamil.word.game.solliadi.RippleView

                android:id="@+id/pic_game"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_50"
                app:rv_centered="true"
                android:background="@drawable/bt1"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_marginRight="@dimen/lrtbp_10"
                app:rv_color="@color/rippelColor1">
                <TextView

                    android:layout_width="wrap_content"
                    android:id="@+id/picgame"
                    android:text="படம் பார்த்து கண்டுபிடி"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_16"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/lrtbp_15"
                    android:layout_marginLeft="@dimen/lrtbp_10"
                    />
                <TextView
                    android:id="@+id/p_id"
                    android:layout_alignParentRight="true"
                    android:text="(1000)"
                    android:textSize="@dimen/info_version_name_font_size"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/lrtbp_5"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </nithra.tamil.word.game.solliadi.RippleView>

            <nithra.tamil.word.game.solliadi.RippleView
                android:id="@+id/hint_game"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_height="@dimen/wh_50"
                app:rv_centered="true"
                android:background="@drawable/bt2"
                android:layout_marginTop="@dimen/lrtbp_10"
                app:rv_color="@color/rippelColor2">

                <TextView
                    android:layout_marginTop="@dimen/lrtbp_15"
                    android:layout_marginLeft="@dimen/lrtbp_10"
                    android:text="குறிப்புகள் மூலம் கண்டுபிடி"
                    android:id="@+id/hintgame"
                    android:textSize="@dimen/txt_16"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/c_id"
                    android:layout_alignParentRight="true"
                    android:text="(1000)"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/lrtbp_5"
                    android:textSize="@dimen/info_version_name_font_size"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </nithra.tamil.word.game.solliadi.RippleView>

            <nithra.tamil.word.game.solliadi.RippleView
                android:id="@+id/solukulsol"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_50"
                app:rv_centered="true"
                android:background="@drawable/bt3"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginTop="@dimen/lrtbp_10"
                app:rv_color="@color/rippelColor2">

                <TextView
                    android:layout_marginTop="@dimen/lrtbp_15"
                    android:id="@+id/solgame"
                    android:text="சொல்லுக்குள் சொல்"
                    android:textSize="@dimen/txt_16"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_10"
                    />

                <TextView
                    android:id="@+id/ss_id"
                    android:layout_alignParentRight="true"
                    android:text="(1000)"
                    android:textSize="@dimen/info_version_name_font_size"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/lrtbp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </nithra.tamil.word.game.solliadi.RippleView>

            <nithra.tamil.word.game.solliadi.RippleView
                android:id="@+id/word_game"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh_50"
                app:rv_centered="true"
                android:background="@drawable/bt4"
                android:layout_marginLeft="@dimen/lrtbp_10"
                android:layout_marginRight="@dimen/lrtbp_10"
                android:layout_marginTop="@dimen/lrtbp_10"
                app:rv_color="@color/rippelColor3">
                <TextView

                    android:id="@+id/wordgame"
                    android:text="சொல் விளையாட்டு"
                    android:textSize="@dimen/txt_16"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/lrtbp_15"
                    android:layout_marginLeft="@dimen/lrtbp_10"
                    />
                <TextView
                    android:id="@+id/s_id"
                    android:layout_alignParentRight="true"
                    android:text="(1000)"
                    android:textSize="@dimen/info_version_name_font_size"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginRight="@dimen/lrtbp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </nithra.tamil.word.game.solliadi.RippleView>




        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="@dimen/lrtbp_10"
            android:id="@+id/ads_lay"
            android:layout_below="@+id/head"
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:visibility="gone"
            android:layout_height="wrap_content">
        </LinearLayout>


<LinearLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView

        android:id="@+id/leader"
        android:layout_centerHorizontal="true"

        android:layout_marginRight="@dimen/lrtbp_10"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:layout_weight="0.33"
        android:background="@drawable/pullikal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/wh_50"
        android:layout_alignParentLeft="true"/>
    <TextView

        android:id="@+id/achivements"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="@dimen/lrtbp_10"
        android:layout_marginRight="@dimen/lrtbp_10"
        android:background="@drawable/viruthukal"
        android:layout_width="wrap_content"
        android:layout_weight="0.33"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/wh_50"
        />
</LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/m_settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/lrtbp_20"
            android:layout_marginLeft="@dimen/lrtbp_10"
            android:layout_below="@+id/head"
            android:background="@drawable/settings"
            android:layout_width="@dimen/wh_40"
            android:layout_height="@dimen/wh_40" />

    </RelativeLayout>

</RelativeLayout>
