<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:background="@drawable/back_dialog"
     android:paddingTop="@dimen/lrtbp_10"
    android:layout_marginRight="@dimen/lrtbp_5"
    android:layout_marginTop="@dimen/lrtbp_30"
    android:layout_marginBottom="@dimen/lrtbp_30"
    android:layout_marginLeft="@dimen/lrtbp_5"
    android:paddingBottom="@dimen/lrtbp_20"
     android:layout_centerInParent="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:id="@+id/close"
       android:layout_marginRight="@dimen/lrtbp_5"
       android:background="@drawable/kid_dia_cancel"
       android:layout_alignParentRight="true"
       android:layout_width="@dimen/croll_insbut_height"
       android:layout_height="@dimen/croll_insbut_height" />
 <TextView
     android:id="@+id/heading"
     android:text="Free Roll"
     android:gravity="center"
     android:textStyle="bold"
     android:textColor="@color/black"
     android:paddingTop="@dimen/lrtbp_5"
     android:paddingBottom="@dimen/lrtbp_5"
     android:textSize="@dimen/txt_18"
     android:layout_marginLeft="@dimen/lrtbp_30"
     android:layout_marginRight="@dimen/lrtbp_30"
     android:background="@drawable/button2"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/heading_2"
        android:text="STOP IN 1000"
        android:layout_marginTop="@dimen/lrtbp_10"
        android:layout_below="@+id/heading"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/dark_green"
        android:paddingTop="@dimen/lrtbp_5"
        android:paddingBottom="@dimen/lrtbp_5"
        android:textSize="@dimen/txt_22"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:layout_marginRight="@dimen/lrtbp_10"
        android:background="@drawable/bones_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/timer"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:text="no"
        android:textSize="@dimen/lrtbp_30"
        android:layout_marginLeft="@dimen/lrtbp_20"
        android:layout_marginRight="@dimen/lrtbp_20"
        android:layout_below="@+id/heading_2"
        android:layout_marginTop="@dimen/lrtbp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/timer2"
        android:visibility="gone"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:text="no"
        android:textSize="@dimen/lrtbp_30"
        android:layout_marginLeft="@dimen/lrtbp_20"
        android:layout_marginRight="@dimen/lrtbp_20"
        android:layout_below="@+id/heading_2"
        android:layout_marginTop="@dimen/lrtbp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/t_time"
        android:layout_above="@+id/r3"
        android:gravity="center"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:background="@drawable/bones_back"
        android:textSize="@dimen/txt_20"
        android:layout_marginLeft="@dimen/lrtbp_30"
        android:layout_marginRight="@dimen/lrtbp_30"
        android:layout_marginBottom="@dimen/lrtbp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/r3"
        android:text="JACKPOT 1000 (50-Coins)"
        android:layout_above="@+id/r2"
        android:gravity="center"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:background="@drawable/bones_back"
        android:textSize="@dimen/txt_18"
        android:layout_marginLeft="@dimen/lrtbp_20"
        android:layout_marginRight="@dimen/lrtbp_20"
        android:layout_marginBottom="@dimen/lrtbp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/r2"
       android:text="Above 990 to 1000 (20-Coins)"
       android:layout_above="@+id/r1"
       android:gravity="center"
       android:textColor="@color/dark_green"
       android:textStyle="bold"
       android:background="@drawable/bones_back"
       android:textSize="@dimen/txt_18"
       android:layout_marginLeft="@dimen/lrtbp_20"
       android:layout_marginRight="@dimen/lrtbp_20"
       android:layout_marginBottom="@dimen/lrtbp_10"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
   <TextView
       android:id="@+id/r1"
       android:text="Above 1000 and below 990(0-Coin)"
       android:layout_above="@+id/start"
       android:gravity="center"
       android:textStyle="bold"
       android:textColor="@color/dark_green"
       android:background="@drawable/bones_back"
       android:textSize="@dimen/txt_18"
       android:layout_marginLeft="@dimen/lrtbp_20"
       android:layout_marginRight="@dimen/lrtbp_20"
       android:layout_marginBottom="@dimen/lrtbp_10"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/start"
        android:text="START"
        android:paddingLeft="@dimen/txt_20"
        android:paddingRight="@dimen/txt_20"
        android:textSize="@dimen/txt_25"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/solukulsol"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/stop"
        android:text="STOP"
        android:layout_marginTop="@dimen/lrtbp_10"
        android:paddingLeft="@dimen/lrtbp_25"
        android:paddingRight="@dimen/lrtbp_25"
        android:textSize="@dimen/txt_25"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/solukulsol"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

</RelativeLayout>