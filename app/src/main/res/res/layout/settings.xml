<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:background="#cc9fd98a"
android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/headding"

    android:paddingLeft="@dimen/lrtbp_5"
   android:layout_centerInParent="true"
    android:background="@drawable/setting_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_sound"
        android:layout_marginTop="@dimen/lrtbp_10"
        android:text="ஒலி அமைப்பு"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:textColor="@color/light_yellow"
        android:textSize="@dimen/txt_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/cancel"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/wh_35"
        android:visibility="gone"
        android:layout_height="@dimen/wh_35" />
    <LinearLayout
        android:layout_marginBottom="@dimen/lrtbp_5"
        android:id="@+id/sound_layout"
        android:layout_width="wrap_content"
       android:paddingLeft="@dimen/lrtbp_25"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/txt_sound"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sound_txt"
            android:layout_marginTop="@dimen/lrtbp_10"
            android:paddingBottom="@dimen/lrtbp_10"
            android:text="ஒலி"
            android:textColor="@color/light_yellow"
            android:textSize="@dimen/txt_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ToggleButton
            android:id="@+id/toggle"
            android:layout_marginTop="@dimen/lrtbp_10"
            android:layout_marginLeft="@dimen/lrtbp_20"
            android:layout_marginRight="@dimen/lrtbp_10"
            android:layout_width="@dimen/wh_50"
            android:background="@drawable/switch_on_off"
            android:layout_height="@dimen/txt_25"
            android:focusableInTouchMode="false"
            android:textOff=""
            android:textOn="" />
    </LinearLayout>
    <TextView
        android:text="எழுத்துரு அமைப்பு"
        android:textStyle="bold"
        android:id="@+id/font_txt"
        android:visibility="gone"
        android:paddingTop="@dimen/lrtbp_5"
        android:paddingBottom="@dimen/lrtbp_10"
        android:layout_marginTop="@dimen/lrtbp_5"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:layout_below="@+id/sound_layout"
        android:textColor="@color/light_yellow"
        android:textSize="@dimen/txt_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/rid_layout"
        android:layout_marginBottom="@dimen/lrtbp_10"
        android:layout_below="@+id/font_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup

            android:id="@+id/Rdgroup"
            android:layout_marginTop="@dimen/lrtbp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/font1"
                android:text="எழுத்து 1"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/font2"
                android:text="எழுத்து 2"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
android:visibility="gone"
                android:id="@+id/font3"
                android:textColor="@color/white"
                android:text="எழுத்து 3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>


</RelativeLayout>

