<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/rts"
    android:background="@drawable/img_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="@dimen/lrtbp_25"
        android:id="@+id/wq1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh_70">

    </TextView>
<RelativeLayout
  android:layout_marginLeft="@dimen/lrtbp_10"
    android:layout_marginRight="@dimen/lrtbp_10"
android:layout_below="@+id/wq1"
android:background="@color/white"
android:layout_above="@+id/wq2"

  android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:visibility="gone"
        android:id="@+id/p_cancel"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/wh_35"
        android:layout_height="@dimen/wh_35" />


    <ImageView
        android:id="@+id/pic_show"

android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/lrtbp_10"
        android:layout_marginLeft="@dimen/lrtbp_10"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/txt_16"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
    <TextView
        android:layout_marginBottom="@dimen/lrtbp_25"
        android:layout_alignParentBottom="true"
        android:id="@+id/wq2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh_70">

    </TextView>
</RelativeLayout>